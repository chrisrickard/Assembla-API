<?php

class ErrorHandler{
       const CRITICAL = 1;
       const EXCEPTION = 2; 
       const WARNING = 3;

       static public function Error( $type, $msg ){
       	      switch($type){
		  case ErrorHandler::CRITICAL:
		  case ErrorHandler::EXCEPTION:
		  case ErrorHandler::WARNING:
	      	  default:
		      die( $msg );
	      }
       }

}


?>